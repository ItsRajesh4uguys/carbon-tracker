<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Welcome !" android:textSize="24dp" android:id="@+id/statusLineTextView"></TextView>
    <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/startMeasurementBtn" android:text="Start Measurement"></Button>
    <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Preferences" android:id="@+id/preferencesBtn"></Button>
    <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="View Log" android:id="@+id/logBtn"></Button>

    <Button
        android:id="@+id/uploadCacheBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upload Local Data" />

</LinearLayout>
